<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IDNPProyectoGrupo07" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IDNPProyectoGrupo07.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/hamburguerColor</item>
    </style>


    <style name="Theme.IDNPProyectoGrupo07.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:background">@color/tolbarBackground</item>
        <item name="android:textColorPrimary">@color/tolbarTittle</item>
    </style>

    <style name="Theme.IDNPProyectoGrupo07.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">

    </style>


    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/nav_view_icons_color</item>
        <item name="itemTextColor">@color/itemTittle</item>
        <item name="itemBackground">@drawable/nav_view_item_background</item>
    </style>

    <style name="MainImage" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="TextAppearance.Custom.Navigation.Item" parent="TextAppearance.AppCompat">
        <item name="actionLayout">@style/MainImage</item>
    </style>

    //Style setting
    <style name="Settings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">17dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textGroup</item>
    </style>
    // Style home
    <style name="Home" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsEditProfile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/hamburguerColor</item>
    </style>
    //Style edit text profile

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox
        </item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconTint">@color/hamburguerColor</item>
        <item name="boxStrokeColor">@color/hamburguerColor</item>

    </style>

    <style name="EditTextSettings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="buttonFragment" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="backgroundTint">@color/hamburguerColor</item>
    </style>
    //Style register profile
    <style name="RegisterButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    //Style setting
    <style name="SettingsText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:clickable">true</item>

        <item name="android:textColor">@color/textOptions</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_chevron_right_24</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="SettingSwitch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

        <item name="android:paddingLeft">15dp</item>

        <item name="android:paddingRight">20dp</item>

        <item name="android:textColor">@color/textOptions</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="ImageView.Circle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerRadius">100dp</item>
    </style>
    
    
    //Date picker

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorAccent">@color/hamburguerColor</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarStyle</item>

    </style>

    <style name="DatePickerTheme.ButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/hamburguerColor</item>
    </style>


    //slide

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>