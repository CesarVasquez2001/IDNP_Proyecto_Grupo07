<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scan.ScanFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImageViewScan"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/plastic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1006dp"
            tools:layout_editor_absoluteY="928dp"

             />

        <Button
            android:id="@+id/btnplastic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tipo de Plastico"
            android:layout_below="@+id/ImageViewScan"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>




</LinearLayout>