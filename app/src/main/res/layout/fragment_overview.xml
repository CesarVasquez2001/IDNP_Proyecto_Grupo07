<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.overview.OverviewFragment">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.idnpproyectogrupo07.ui.overview.Graphs.Barra.GraficoBarrasVista
                android:id="@+id/graficoBarrasVista"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </com.example.idnpproyectogrupo07.ui.overview.Graphs.Barra.GraficoBarrasVista>

            <com.example.idnpproyectogrupo07.ui.overview.Graphs.Barra.GraficoBarrasVista
                android:id="@+id/graficoBarrasVista2"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </com.example.idnpproyectogrupo07.ui.overview.Graphs.Barra.GraficoBarrasVista>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tituloGraficoCircular1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     android:gravity="center"
                    android:textStyle="bold"
                    >

                </TextView>

                <com.example.idnpproyectogrupo07.ui.overview.Graphs.Circular.PieView
                    android:id="@+id/pie_view"
                    android:layout_width="240dp"
                    android:layout_height="240dp"

                    app:layout_constraintTop_toBottomOf="@+id/tituloGraficoCircular1" />

                <TextView
                    android:id="@+id/leyendaGraficoCircular1"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@color/color_one"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/pie_view"
                    app:layout_constraintTop_toBottomOf="@+id/tituloGraficoCircular1" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tituloGraficoCircular2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    >

                </TextView>

                <com.example.idnpproyectogrupo07.ui.overview.Graphs.Circular.PieView
                    android:id="@+id/pie_view2"
                    android:layout_width="240dp"
                    android:layout_height="240dp"

                    app:layout_constraintTop_toBottomOf="@+id/tituloGraficoCircular2" />

                <TextView
                    android:id="@+id/leyendaGraficoCircular2"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@color/color_one"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/pie_view2"
                    app:layout_constraintTop_toBottomOf="@+id/tituloGraficoCircular2" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>