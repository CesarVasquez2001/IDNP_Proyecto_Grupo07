<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.changepassword.ChangePasswordFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/setting_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_username"
                    style="@style/SettingsEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current password" />

                <EditText
                    android:id="@+id/edit_current_password"
                    style="@style/EditTextSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"

                    />

                <TextView
                    android:id="@+id/text_fullname"
                    style="@style/SettingsEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New password" />

                <EditText
                    android:id="@+id/edit_new_password"
                    style="@style/EditTextSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/confirm"
                    style="@style/SettingsEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm new password" />

                <EditText
                    android:id="@+id/edit_confirm_new_password"
                    style="@style/EditTextSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:drawable="@drawable/ic_baseline_account_circle_24"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/edit_update_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonFragment"
                    android:text="Change password" />
            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</FrameLayout>