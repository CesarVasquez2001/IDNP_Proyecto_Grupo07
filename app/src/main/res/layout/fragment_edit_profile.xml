<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.settings.editprofile.EditProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/setting_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include
                android:id="@+id/nav_setting_edit_profile_header"
                layout="@layout/edit_profile_header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_username"
                    style="@style/SettingsEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Username" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    style="@style/EditTextSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"

                    />

                <TextView
                    android:id="@+id/text_fullname"
                    style="@style/SettingsEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full name" />

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    style="@style/EditTextSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/text_country"
                    style="@style/SettingsEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryCodePicker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:ccp_defaultLanguage="SPANISH"
                    app:ccp_defaultNameCode="PE"
                    style="@style/EditTextSettings"
                    app:ccp_showPhoneCode="false"></com.hbb20.CountryCodePicker>

                <TextView
                    android:id="@+id/text_gender"
                    style="@style/SettingsEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="217dp"
                    android:layout_height="wrap_content"

                    >

                    <AutoCompleteTextView
                        android:id="@+id/text_complete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/EditTextSettings"
                        android:inputType="none" />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text_date"
                    style="@style/SettingsEditProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of birth" />

                <EditText
                    android:id="@+id/edit_text_date"
                    style="@style/EditTextSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonFragment"
                    android:text="Update profile" />
            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</FrameLayout>